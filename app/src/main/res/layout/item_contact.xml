<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/list_padding_top_bottom"
    android:paddingBottom="@dimen/list_padding_top_bottom"
    android:paddingLeft="@dimen/list_padding_left_right"
    android:paddingRight="@dimen/list_padding_left_right">

    <ImageView
        android:id="@+id/imageview_contact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <TextView
        android:id="@+id/textview_contact_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageview_contact"
        android:layout_alignBottom="@+id/imageview_contact"
        android:layout_alignTop="@+id/imageview_contact"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        />

</RelativeLayout>