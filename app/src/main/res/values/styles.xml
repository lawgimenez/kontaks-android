<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LabelIntroDesc" parent="Label">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">@dimen/label_padding_left_right</item>
        <item name="android:paddingRight">@dimen/label_padding_left_right</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="LabelPage" parent="LabelIntroDesc">
        <item name="android:layout_centerInParent">false</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
